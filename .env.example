IMMICH_VERSION=release

# External Drive Paths
# Update these to match your system's mount points
UPLOAD_LOCATION=/Volumes/SanDisk/immich
BACKUP_LOCATION=/Volumes/SanDisk/immich/postgres_backups

# Database credentials
# ⚠️ IMPORTANT: Generate a strong password (16+ chars, mixed case, numbers, symbols)
# DO NOT use default/weak passwords in production
# See CREDENTIALS.md for secure password management
# Note: Use $$ to escape dollar signs (e.g., P7$$password becomes P7$password)
DB_PASSWORD=YOUR_STRONG_PASSWORD_HERE
DB_USERNAME=immich_user
DB_DATABASE_NAME=immich

# Mount check (set to true if using external drives on macOS with Colima)
IMMICH_IGNORE_MOUNT_CHECK_ERRORS=true